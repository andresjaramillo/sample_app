<table class="profile" summary="Information du profil">
	<tr>
		<td class="main">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.nom %>
			</h1>
			<% unless @user.microposts.empty? %>
				<table class="micropost" summary="Micro-message de l'utilisateur">
					<%= render @microposts%>
				</table>
				<%= will_paginate @microposts%>
			<% end %>
		</td>	
		<td class="sidebar round">
      		<strong>Nom</strong> <%= @user.nom %><br />
      		<strong>Email</strong> <%= @user.email %><br />
      		<strong>Path</strong>  <%= link_to user_path(@user), @user %><br/>
      		<strong>URL</strong>  <%= link_to user_url(@user), @user %><br/>
    		<strong>Message(s): </strong> <%= @user.microposts.count%>
    	</td>
	</tr>
</table>

